{% extends 'layouts/login.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
            <h1><i class="fa fa-table"></i> {{ 'app.title'|trans }} v{{ 'app.version'|trans }}</h1>
            <form action="{{ path("login_check", {}) }}" method="POST" id="loginForm">

                {% if error %}
                    <div class="alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div class="form-group">
                    <input type="text" required="required" class="form-control" value="{{ last_username }}" name="_username" id="username" placeholder="example@gmail.com" />
                </div>

                <div class="form-group">
                    <input type="password" class="form-control" name="_password" required="required" id="password" placeholder="{{ 'user.password'|trans }}" />
                </div>

                <!--<div class="checkbox pull-left">
                    <label>
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">{{ 'login.remember_me'|trans }}</label>
                    </label>
                </div>-->

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

                <button type="submit" class="pull-right btn btn-primary">
                    {{ 'login.log_in'|trans }} <i class="fa fa-sign-in"></i>
                </button>
            </form>
        </div>
    </div>
{% endblock %}
